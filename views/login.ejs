<div class="login-bg">
    <div class="container">
        <form action="/auth/login" class="form" method="POST">
            <h2 class="text-center text-white">Login</h2>
            <%- include ("./partials/messages") %>
            <div class="row">
                <div class="col-6 mb-3">
                  <input type="number" class="form-control" placeholder="Account Number" name="account_number">
                </div>
                <div class="col-6">
                  <input type="password" class="form-control" placeholder="PIN" name="password">
                </div>
                <div class="col-6">
                  <input type="submit" class="form-control btn btn-info mt-3 login-btn" value="login">
                </div>
              </div>
        </form>
    </div>
</div>